<div class="night-bg py-5 bg-img" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'background1.jpg' %>); height: 100%;">
  <img src="https://sm.ign.com/ign_fr/cover/a/avatar-gen/avatar-generations_bssq.jpg" alt="" class="avatar-devise mb-3 mt-auto rounded-5">
    <p class="nickname text-center"><%#= current_user.nickname %></p>
    <div class="container mt-auto mb-5">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, placeholder: 'Email', label: false,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>
          <%= f.input :password, placeholder: 'Password', label: false,
                      required: false,
                      class: "p-3 rounded-5",
                      input_html: { autocomplete: "current-password", class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>
        </div>

    <div class="form-actions">
      <%= f.button :submit, "Login", class: "simple-form-btn w-100 p-2 rounded-5" %>
    </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
