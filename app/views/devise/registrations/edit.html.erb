<div data-controller="image-input" class="night-bg py-5 d-flex flex-column align-items-center" style="background-image: url(<%= image_path 'finalbg.jpg' %>); height: 100%;">
  <img src="https://rouelibrenmaine.fr/wp-content/uploads/2018/10/empty-avatar.png" data-image-input-target="image" alt="" class="avatar-devise mb-3 mt-auto rounded-5">
  <div>
    <span class="btn btn-primary rounded-3" aria-label="Edit picture" data-action="click->image-input#clickInput">
      <i class="fa-solid fa-pen" style="color: #ffffff;"></i>
    </span>
  </div>

  <div class="container mt-auto mb-5">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, placeholder: 'Email', label: false, required: true, autofocus: true, input_html: { class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, placeholder: 'Password', label: false,
                  # hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password", class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>
      <%# <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password, placeholder: 'Current password', label: false,
                  # hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password", class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "simple-form-btn w-100 p-2 rounded-5" %>
    </div>
  <% end %>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, input_html: { class: "p-2 rounded-5 font-abel bg-dark-subtle" } %></div>

<%= link_to "Back", :back %>
</div>
