<div data-controller="image-input" class="night-bg py-5 d-flex flex-column align-items-center" style="background-image: url(<%= image_path 'night_city.png' %>); height: 100%;">
  <img src="https://rouelibrenmaine.fr/wp-content/uploads/2018/10/empty-avatar.png" data-image-input-target="image" alt="" class="avatar-devise mb-3 mt-auto rounded-5">
   <div class="avatar-pic" data-edit-avatar-target="photo">
    <span class="btn btn-primary rounded-3" aria-label="Edit picture" data-action="click->image-input#clickInput">
      <i class="fa-solid fa-pen" style="color: #ffffff;"></i>
    </span>
  </div>

    <div class="container mt-auto mb-5">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :photo,
                      wrapper_html: { class: "d-none" },
                      input_html: {
                        data: {
                          image_input_target: "input",
                          action: "change->image-input#displayImage"
                        }
                      } %>
          <%= f.input :nickname, placeholder: 'Nickname', label:false,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "nickname", class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>
          <%= f.input :email, placeholder: 'Email', label: false,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>
          <%= f.input :password, placeholder: 'Password', label: false,
                      required: true,
                      # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "p-2 rounded-5 font-abel bg-dark-subtle" } %>
          <%# <%= f.input :password_confirmation, placeholder: 'Password confirmation', label: false,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "p-2 rounded-5 font-abel" } %> %>
        </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "simple-form-btn w-100 p-2 rounded-5" %>
      </div>
        <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
